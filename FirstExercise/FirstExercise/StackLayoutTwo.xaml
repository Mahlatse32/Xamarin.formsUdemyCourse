<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstExercise.StackLayoutTwo">
    <StackLayout>
        <Label VerticalOptions="Start" HorizontalOptions="Start" Text="nyc_photograph"/>

        <StackLayout>
            <Image Source="http://lorempixel.com/1920/1080/nature/3/" />
        </StackLayout>
        
        <StackLayout Orientation="Horizontal">
            <Label Text="Like" TextColor="Blue"/>
            <Label Text="Comment" TextColor="Blue"/>
            <Label Text="Share" TextColor="Blue"/>
        </StackLayout>
       
        <BoxView Color="#f0f0f0" HeightRequest="1"/>
        <Label Text="700 likes"/>
        <Label Text="This is a shot yesterday in Skanor, Sweden, When driving home, from a couple of days of work in Denmark." TextColor="Gray"/>
    </StackLayout>
</ContentPage>