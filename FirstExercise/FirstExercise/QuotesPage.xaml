<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstExercise.QuotesPage">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"
                    Android="20,30,20,20"
                    WinPhone="20,40,20,20"/>

    </ContentPage.Padding>
    <StackLayout>
        <Button Clicked="Button_Clicked" Text="Next"
        BorderRadius="10"
        BorderWidth="2"
        BorderColor="Black"
        HorizontalOptions="Center"/>

        <Label Text="{Binding
            Source={x:Reference slide},
            Path=Value,
            StringFormat='Font Size: {0}'}"
            />

        <Slider BackgroundColor="Black" Maximum="50" Minimum="16" x:Name="slide"/>
        <Label Text=". . . " 
               
             FontSize="{Binding
            Source={x:Reference slide},
            Path=Value}"
               
            x:Name="label"/>
    </StackLayout>
</ContentPage>